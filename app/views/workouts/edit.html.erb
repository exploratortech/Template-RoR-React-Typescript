<div id="workout-edit-continer">
  <% if @error_messages.present? %>
    <div id="error_explanation">
      <h2><%= pluralize(@error_messages.count, "error") %> prohibited this workout from being saved:</h2>
      <ul>
        <% @error_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model: @workout do |form| %>
    <%= form.text_field :distance, placeholder: "Distance" %>
    <%= form.text_field :duration, placeholder: "Duration" %>
    <%= form.text_field :pace, placeholder: "Pace" %>
    <%= form.submit %>
  <% end %>

  <%= link_to "All workouts", workouts_path %>
</div>
